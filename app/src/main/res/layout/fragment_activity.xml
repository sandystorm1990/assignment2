                android:drawableLeft="@mipmap/icon_tea"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="@string/aTea"
                android:drawableStart="@mipmap/icon_tea" />

            <TextView
                android:id="@+id/aWorking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_working"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="@string/aWorking"
                android:drawableStart="@mipmap/icon_working" />

            <TextView
                android:id="@+id/aTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_tv"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="@string/aTv"
                android:drawableStart="@mipmap/icon_tv" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
